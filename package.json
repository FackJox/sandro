    "test:ci": "pnpm run lint && pnpm run test:unit && pnpm run test:e2e --reporter=list",
    "organize:portfolio": "node scripts/organize-portfolio.mjs"
  },
  "dependencies": {
    "@sveltejs/kit": "^2.5.0",
    "@threlte/core": "^7.2.0",
