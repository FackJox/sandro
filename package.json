    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@sveltejs/adapter-vercel": "^5.3.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@types/node": "^20.11.30",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/svelte": "^4.1.0",
    "@playwright/test": "^1.45.0",
    "jsdom": "^24.0.0",
