{
  "name": "sandro-portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "sync": "svelte-kit sync",
    "predev": "npm run sync",
    "prebuild": "npm run sync",
    "precheck": "npm run sync",
    "prelint": "npm run sync",
    "pretest:unit": "npm run sync",
    "pretest:e2e": "npm run sync",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "svelte-check --tsconfig ./tsconfig.json",
    "test:unit": "node scripts/run-vitest.mjs",
    "test:e2e": "playwright test",
